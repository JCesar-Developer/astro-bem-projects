---
import NavBar from '@oh.studio/components/navbar.astro';
import Footer from '@oh.studio/components/footer.astro';
import ActionBtn from '@oh.studio/components/action_btn.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props { title: string; }

const { title } = Astro.props;
const rootUrl = import.meta.env.OH_STUDIO;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Oh studio landscape developed with Astro + BEM-Css" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

    <link rel="preload" href="/oh.studio/fonts/Roboto-Light.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/oh.studio/fonts/Roboto-Regular.woff2" as="font" type="font/woff2" crossorigin />

    <ViewTransitions />
	</head>

	<body>
    <header>
      <NavBar 
        items={ [
          { name: 'Home', link: `${ rootUrl }` },
          { name: 'Profile', link: `${ rootUrl }/profile` },
          { name: 'Contact', link: `${ rootUrl }/contact` },
        ]}
        currentUrl={ currentPath }
      />
    </header>

    <main>
      <slot />
    </main>

    <ActionBtn 
      content="Contact us"
      link={ `${ rootUrl }/contact` }
      hasLogo 
    />
    <Footer/>
	</body>

</html>

<style is:global>
  @font-face {
    font-family: 'Roboto';
    src: url('/oh.studio/fonts/Roboto-Light.woff2') format('woff2');
    font-weight: 300;
  }
  @font-face {
    font-family: 'Roboto';
    src: url('/oh.studio/fonts/Roboto-Regular.woff2') format('woff2');
    font-weight: 400;
  }
  @font-face {
    font-family: 'Roboto';
    src: url('/oh.studio/fonts/Roboto-Medium.woff2') format('woff2');
    font-weight: 500;
  }

  :root {
    --oh-primary: #7f7f7f;
    --oh-secondary: #e8e5e480;
    --oh-white: #fff;
    --oh-black: #000;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Roboto', sans-serif;
  }

  body {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
    color: var(--oh-black);
  }

  h1 {
    font-size: 4rem;
    font-weight: 500;
  }

  h2 {
    font-size: 2rem;
    font-weight: 400;
  }

  @keyframes show-up {
    from {
      translate: 0 100px;
      opacity: 0;
    }
    to {
      translate: 0 0;
      opacity: 1;
    }
  }
</style>

<style>
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    position: relative;
    min-height: 100vh;
    overflow-y: scroll;
  }

  header {
    position: sticky;
    top: 0px;
    display: flex;
    justify-content: center;
    padding-top: 2rem;
    z-index: 10;
  }

  main {
    max-width: 1400px;
    padding: 0 40px;
  }
</style>