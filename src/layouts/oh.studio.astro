---
import { ViewTransitions } from 'astro:transitions';

import NavBar from '../components/oh.studio/navbar.astro';
import Footer from '../components/oh.studio/footer.astro';
import ActionBtn from '../components/oh.studio/action_btn.astro';

interface Props { title: string; }

const { title } = Astro.props;
const rootUrl = import.meta.env.OH_STUDIO;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Oh studio landscape developed with Astro + BEMCss" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <ViewTransitions />
	</head>

	<body>
    <header>
      <NavBar 
        items={ [
          { name: 'Home', link: `${ rootUrl }` },
          { name: 'Profile', link: `${ rootUrl }/profile` },
          { name: 'Contact', link: `${ rootUrl }/contact` },
        ]}
        currentUrl={ currentPath }
      />
    </header>
    <main>
      <slot />
    </main>

    <ActionBtn 
      content="Contact us"
      link={ `${ rootUrl }/contact` }
      hasLogo 
    />
    <Footer/>
	</body>

</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap');
  @import '../styles/oh-utilities.css';

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Roboto', sans-serif;
  }

  body {
    margin: 0;
    padding: 0;
  }

  :root {
    --oh-primary: #7f7f7f;
    --oh-secondary: #e8e5e480;
    --oh-white: #fff;
    --oh-black: #000;
  }

  a {
    text-decoration: none;
    color: var(--oh-black);
  }
</style>

<style>
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    position: relative;
    min-height: 100vh;
    overflow-y: scroll;
  }

  header {
    position: sticky;
    top: 0px;
    display: flex;
    justify-content: center;
    padding-top: 2rem;
    z-index: 10;
  }

  main {
    max-width: 1400px;
    padding: 0 40px;
  }
</style>