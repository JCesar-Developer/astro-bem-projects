---
import OhStudio from '../../layouts/oh.studio.astro';
import Tag from '../../components/oh.studio/tag.astro';
import CardExperience from '../../components/oh.studio/card-experience.astro';

import Experiences from '../../data/oh.studio/experiences.data';
import Clients from '../../data/oh.studio/clients.data';

const rootUrl = import.meta.env.OH_STUDIO;
---

<OhStudio title='profile'>
  <section class="hero">
    <h1>Hey üëãüèº I'm Oli </h1>
  </section>

  <section class="pictures">
    <img
      class="pictures__image" 
      src={ `${rootUrl}/oli_1.jpg` } 
      alt="Profile picture"
    >
    <img
      class="pictures__image" 
      src={ `${rootUrl}/oli_2.jpg` }
      alt="Profile picture"
    >
  </section>

  <section class="about">
    <Tag text="About" />
    <h2 class="about__description">A freelance designer based in the UK. I combine my experience in product and brand to solve problems, tell stories, and create compelling experiences.</h2>
  </section>

  <section class="experience">
    <Tag text="Experience" />
    <h2 class="experience__description">Where I've worked</h2>
    <div class="experience__grid">
      {
        Experiences.map(experience => 
          <CardExperience 
            period={ experience.period }
            enterprise={ experience.enterprise }
            position={ experience.position }
            contract={ experience.contract }
          />
        )
      }
    </div>
  </section>

  <section class="clients">
    <Tag text="Clients" />
    <h2 class="clients__description">Who I've worked with</h2>
    <div class="clients__grid">
      { Clients.map(client =>
        <img class="clients__client" src={ client.logo_url } alt={ client.description } />
      )}
    </div>
  </section>
  
  <section class="prefooter">
    <h2 class="prefooter__title">Let's work together.</h2>
    <h2 class="prefooter__title">
      <a class="prefooter__actionbtn" href={ `${ rootUrl }/contact` }>
        Get in touch.
      </a>
    </h2>
  </section>
</OhStudio>

<style>
  .hero {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 80vh;
  }

  .pictures {
    width: auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 1rem;

    .pictures__image {
      width: 100%;
      aspect-ratio: 1/.75;
      object-fit: cover;
      border-radius: 15px;
    }
  }

  .about {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: 90vh;

    .about__description {
      margin-top: 1rem;
      max-width: 600px;
    }
  }

  .experience {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;

    .experience__description {
      margin-top: 1rem;
    }

    .experience__grid {
      display: grid;
      width: 100%;
      grid-template-columns: repeat(3, 1fr);
      row-gap: 5rem;
      align-items: center;
      margin: 7rem 0;
    }
  }

  .clients {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;

    .clients__description {
      margin-top: 1rem;
    }

    .clients__grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      width: 100%;
      margin: 7rem 0;

      .clients__client {
        width: 100%;
        padding: 20px;
        filter: invert(1);
      }
    }
  }

  .prefooter {
    margin-top: 2rem;
    margin-bottom: 10rem;
    text-align: center;

    .prefooter__title {
      font-size: 2.5rem;
      font-weight: 400;
    }

    .prefooter__actionbtn {
      color: var(--oh-primary);
      cursor: pointer;
      transition: color .1s ease-in-out;

      &:hover {
        color: var(--oh-secondary);
      }
    }
  }
</style>