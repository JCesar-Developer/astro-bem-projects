---
import OhStudio from '@/layouts/oh.studio.astro';
const developer = import.meta.env.DEV;
---
<OhStudio title='contact'>
  
  <section class="hero">
    <h1 class="hero__title">Let's work together.</h1>
    <a href=""></a>
    <a href={ developer.toString() } target="_blank">
      <h1 class="hero__subtitle">
        Get in touch.
      </h1>
    </a>
  </section>

</OhStudio>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;

    .hero__title {
      animation-name: fade-up;
      animation-duration: 1s;
      animation-fill-mode: both;
    }

    .hero__subtitle {
      color: var(--oh-primary);
      cursor: pointer;
      transition: color .1s ease-in-out;

      animation-name: fade-up;
      animation-duration: .8s;
      animation-fill-mode: both;
      animation-delay: .2s;

      &:hover {
        color: var(--oh-secondary);
      }
    }
  }
</style>