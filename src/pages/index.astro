---
import AstroLogo from "../../public/astro-logo.astro";
---


<main>
  <AstroLogo />

  <section class="hero">
    <h1 class="hero__title">ASTRO + BEM</h1>
  
    <div class="hero__links">
      <a href="/oh.studio"><button class="hero__link">Project 1</button></a>
      <a href="/page-2"><button class="hero__link">Project 2</button></a>
      <a href="/page-3"><button class="hero__link">Project 3</button></a>
    </div>
  </section>
</main>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    margin: 0;
    padding: 0;
  }

  :root {
    --primary-color: darkslateblue;
    --secondary-color: #d0d0d0;
    --white-color: white;
  }

  main {
    background-color: var(--primary-color);
    position: relative;
    color: var(--white-color);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  a {
    color: var(--white-color);
    text-decoration: none;
  }
  .hero {
    display: flex;
    flex-direction: column;
  }

  .hero__title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 2rem;
    text-shadow: #000 1px 0 10px;
    align-self: center;
  }

  .hero__links {
    list-style: none;
    display: flex;
    gap: 2rem;
    justify-content: center;      
  }

  .hero__link {
    cursor: pointer;
    border: solid 2px var(--secondary-color);
    color: var(--secondary-color);
    background: inherit;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    text-transform: uppercase;
    font-weight: 700;
    transition: all 0.2s ease-in-out;

    &:hover {
      background-color: var(--secondary-color);
      color: var(--primary-color);
    }
  } 
</style>