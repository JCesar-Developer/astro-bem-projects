---
import BaoCard from '@bao/components/BaoCard.astro';
---

<section class="hero">
  <h1 class="hero__fixed-title">
    <div class="row-1">
      <span>B</span>
      <span>A</span>
      <span>O</span>
      <span>&nbsp;</span>
    </div>
    <div class="row-2">
      <span>S</span>
      <span>O</span>
      <span>C</span>
      <span>I</span>
      <span>E</span>
      <span>T</span>
      <span>Y</span>
      <span>.</span>
    </div>
  </h1>

  <p class="hero__fixed-description">This project is only a partial clone of the official BaoSociety website. The objective of creating this project is purely academic and does not have any commercial purpose. The code used to create this clone is its own authorship and under no circumstances has it been copied from the source code of the website from which it is inspired. All image rights belong to Bao Society.</p>



  <section class="hero__background">

    <div class="hero__background-image1">
      <BaoCard image='/baosociety/images/baos/bao-1.png' isInverted />
      <div class="overlay"></div>
    </div>

    <div class="hero__background-logo-2">
      <span>包子</span>
    </div>
    <div class="hero__background-image2">
      <BaoCard image='/baosociety/images/baos/bao-2.png' />
      <div class="overlay"></div>
    </div>
  </section>
</section>

<style>
@import url(../css/hero.animation.css);

.hero {
  position: relative;
  z-index: 0;

  .hero__fixed-title {
    position: relative;
    overflow: hidden;
    position: fixed;
    display: flex;
    flex-direction: row;
    font-size: 22.5vw;
    top: 20vh;

    .row-1, .row-2 {
      display: flex;
      flex-direction: row;
    }

    @media (min-width: 1440px) {
      font-size: 18vw;
    }

    @media (max-width: 768px) {
      top: 50%;
      transform: translateY(-50%);
    }

    @media (max-width: 480px) {
      flex-direction: column;
      top: 80vw;
      transform: translateY(0);
      font-size: 35vw;
      .row-1, .row-2 { margin-top: -30px; }
    }

    span {
      font-family: 'Cinderblock', sans-serif;
      text-transform: uppercase;
      font-weight: 400;
      line-height: 1;
    }
  }

  .hero__fixed-description {
    position: fixed;
    bottom: 10%;
    width: 35%;
    font-size: 13px;
    
    @media (max-width: 768px) {
      width: 75%;
    }

    @media (max-width: 576px) {
      width: 82.5%;
      bottom: 5%;
      font-size: 12px;
      text-wrap: balance;
    }
  }

  .hero__background {
    margin-inline: 0px;
    position: relative;
    z-index: -20;

    .hero__background-image1 {
      position: absolute;
      width: 28vw;
      right: 5%;
      top: -10vh;

      @media (max-width: 768px) {
        width: 46vw;
        left: -30px;
        top: 90px;
      }
    }

    .hero__background-image2 {
      position: absolute;
      width: 24vw;
      top: 40vw;
      right: -40px;

      @media (max-width: 1440px){
        right: -60px;
      }

      @media (max-width: 768px) {
        width: 46vw;
        right: -30px;
        top: 190px;
      }
    }

    .hero__background-logo-2 {
      position: absolute;
      display: flex;
      align-items: center;
      justify-content: center;
      top: 50px;
      right: 2vw;
      height: 80px;
      width: 80px;
      border: solid 5px var(--bao-blue-accent);
      border-radius: 50%;

      @media (max-width: 576px) {
        top: 120px;
        width: 70px;
        height: 70px;
        left: 30vw;
        border-width: 3px;
      }

      span {
        font-family: 'Cinderblock', sans-serif;
        text-transform: uppercase;
        font-size: 2.1rem;
        font-weight: bolder;
        color: var(--bao-blue-accent);

        @media (max-width: 768px){
          font-size: 1.25rem;
          font-weight: 400;
        }
      }
    }
  }
}
</style>