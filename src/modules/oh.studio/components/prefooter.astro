---
const developer = import.meta.env.DEV;
---

<section class="prefooter reveal">
  <h2 class="prefooter__title fade-up-title--animation">Let's work together.</h2>
  <h3 class="prefooter__title fade-up-subtitle--animation">
    <a class="prefooter__actionbtn" href={ developer.toString() } target="_blank">
      Get in touch.
    </a>
  </h3>
</section>

<style>
  .prefooter {
    margin-top: 8rem;
    padding: 0 40px 8rem 40px;
    text-align: center;

    @media (max-width: 768px) {
      padding: 6rem 0px;
    }

    .prefooter__title {
      font-size: 2.5rem;
      font-weight: 400;
      transition: opacity .8s ease-in-out;

      @media (max-width: 768px) {
        font-size: 2rem;
      }
    }

    .prefooter__actionbtn {
      color: var(--oh-primary);
      cursor: pointer;
      transition: color .1s ease-in-out;

      @meda (max-width: 768px) {
        font-size: 1.25rem;
      }

      &:hover {
        color: var(--oh-secondary);
      }
    }
  }
</style>